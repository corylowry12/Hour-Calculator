                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginStart="12dp"
                        android:id="@+id/notificationsImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
