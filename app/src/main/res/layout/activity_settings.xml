                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="0dp"
                        android:text="@string/report_a_bug"
                        android:textSize="18sp"
