<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/lightBackground</item>
        <item name="textColor">@color/lightText</item>
        <item name="itemBackground">@color/lightBackground</item>
        <item name="cardBackgroundColor">@color/cardLightBackground</item>
        <item name="android:navigationBarColor">@color/darkNavColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
        <item name="ms_arrow_tint">@color/spinnerLightArrowTint</item>
        <item name="ms_text_color">@color/spinnerLightTextColor</item>
        <item name="ms_background_color">@color/spinnerLightBackgroundColor</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="iconTint">@color/lightIconTint</item>
        <item name="tint">@color/lightTint</item>
        <item name="chartbackground">@color/cardLightBackground</item>
        <item name="actionBarTheme">@style/ActionBarLight</item>
        <item name="settingsTextColorAccent">@color/settingsTextColorAccent</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="popupMenuBackground">@color/lightBackground</item>
        <item name="alertDialogTheme">@style/AlertDialogStyleLight</item>
    </style>

    <style name="AMOLED" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/darkBackground</item>
        <item name="textColor">@color/darkTextColor</item>
        <item name="cardBackgroundColor">#444E53</item>
        <item name="android:navigationBarColor">@color/darkNavColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="itemBackground">@color/darkMenuBackground</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="popupMenuBackground">@color/darkMenuBackground</item>
        <item name="ms_arrow_tint">@color/spinnerDarkArrowTint</item>
        <item name="ms_text_color">@color/spinnerDarkTextColor</item>
        <item name="ms_background_color">@color/spinnerDarkBackgroundColor</item>
        <item name="iconTint">@color/darkIconTint</item>
        <item name="tint">@color/darkTint</item>
        <item name="actionBarTheme">@style/ActionBarDark</item>
        <item name="chartbackground">@color/chartDarkBackground</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="android:popupMenuStyle">@style/popup</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
        <item name="settingsTextColorAccent">@color/settingsTextColorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyleDark</item>
        <item name="alertDialogStyle">@style/AlertDialogStyleDark</item>
    </style>

    <style name="popup" parent="android:ThemeOverlay.Material.Dark">
        <item name="android:popupBackground">@color/darkMenuBackground</item>
    </style>

    <style name="ActionBarDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="tint">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:subtitleTextAppearance">@style/subtitleTextDark</item>
    </style>

    <style name="subtitleTextDark" >
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ActionBarLight" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="tint">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="textColor">?attr/textColor</item>
        <item name="bottomSheetStyle">@drawable/sheet_background_rounded</item>
    </style>

    <style name="AlertDialogStyleDark" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/darkMenuBackground</item>
        <item name="android:textColor">#ffffff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogStyleLight" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/cardLightBackground</item>
        <item name="android:textColor">#000000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="textColorAlertDialogListItem">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="SplashScreenThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="backgroundColor">#ffffff</item>
    </style>

</resources>
